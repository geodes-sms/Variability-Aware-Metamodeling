<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<featureModel>
	<properties>
		<graphics key="autolayoutconstraints" value="false"/>
		<graphics key="legendautolayout" value="true"/>
		<graphics key="showconstraints" value="true"/>
		<graphics key="showshortnames" value="false"/>
		<graphics key="layout" value="horizontal"/>
		<graphics key="showcollapsedconstraints" value="true"/>
		<graphics key="legendhidden" value="false"/>
		<graphics key="layoutalgorithm" value="1"/>
	</properties>
	<struct>
		<and  mandatory="true" name="VCSFeatures">
			<and mandatory="true" name="Commands">
				<feature name="HighLevelCommand"/>
				<and mandatory="true" name="LowLevelCommand">
					<and abstract="true" mandatory="true" name="LowCommands">
						<graphics key="collapsed" value="false"/>
						<feature mandatory="true" name="Add"/>
						<feature name="Checkout"/>
						<feature name="CheckoutCreate"/>
						<feature name="Clone"/>
						<feature mandatory="true" name="Commit"/>
						<feature name="CherryPick">
							<description>Unimplemented for this iteration</description>
						</feature>
						<feature name="CreateBranch"/>
						<feature name="Fetch"/>
						<feature mandatory="true" name="Init"/>
						<feature name="Log"/>
						<feature mandatory="true" name="Open"/>
						<feature name="Pull"/>
						<feature name="Push"/>
						<feature name="RemoteAdd"/>
						<feature name="Rm"/>
					</and>
				</and>
				<or abstract="true" name="MergeStrategy">
					<feature name="DSMCompare"/>
					<feature name="GitDiff"/>
				</or>
			</and>
			<and mandatory="true" name="History">
				<alt abstract="true" name="BranchingStyle">
					<feature name="SingleBranch">
						<description>Linear</description>
					</feature>
					<alt abstract="true" name="MultiBranch">
						<description>Non-linear</description>
						<feature name="InfiniteBranches"/>
						<feature name="LimitBranches"/>
					</alt>
				</alt>
				<and abstract="true" name="VersionWindow">
					<description>
						How many version the users can see. Unabled = all the versions
						Can be achieved with the Log command, not CherryPick
					</description>
					<feature name="SpecificWindowRange">
						<description>Will require some sort of form to collect the number</description>
					</feature>
				</and>
				<alt abstract="true" name="Timestamping">
					<feature name="Label">
						<description>Predefined labels that are automatically generated instead of commit Hash</description>
					</feature>
					<feature name="UniqueCustomLabel">
						<description>1:1 mapping with the commit Hash done in the background</description>
					</feature>
					<feature name="CommitHash">
						<description>Regular commit hash that is generated by JGit</description>
					</feature>
				</alt>
			</and>
			<and mandatory="true" name="CollaborationStyle">
				<or abstract="true" mandatory="true" name="CollaborationStyleType">
					<feature name="LocalOnly"/>
					<feature name="Remote"/>
				</or>
			</and>
			<and mandatory="true" name="Database">
				<description>Will require to ask the user where the DB is located</description>
				<or abstract="true" mandatory="true" name="DataBaseType">
					<feature name="Neo4J"/>
					<feature name="XMI">
						<description>Basically, disk storage, no DB</description>
					</feature>
					<feature name="SQL"/>
					<feature name="MongoDB"/>
				</or>
			</and>
			<and name="VersionUnit">
				<or abstract="true" mandatory="true" name="VersionUnitType">
					<graphics key="collapsed" value="false"/>
					<feature name="File"/>
					<feature name="Semantic"/>
					<feature name="Element"/>
					<feature name="Line"/>
				</or>
			</and>
		</and>
	</struct>
	<constraints>
		<rule>
			<eq>
				<var>MultiBranch</var>
				<disj>
					<var>Checkout</var>
					<disj>
						<var>CheckoutCreate</var>
						<disj>
							<var>CreateBranch</var>
							<var>MergeStrategy</var>
						</disj>
					</disj>
				</disj>
			</eq>
		</rule>
		<rule>
			<eq>
				<var>Remote</var>
				<disj>
					<var>Clone</var>
					<disj>
						<var>Fetch</var>
						<disj>
							<var>Pull</var>
							<disj>
								<var>Push</var>
								<var>RemoteAdd</var>
							</disj>
						</disj>
					</disj>
				</disj>
			</eq>
		</rule>
		<rule>
			<eq>
				<var>DSMCompare</var>
				<conj>
					<var>Semantic</var>
					<var>Element</var>
				</conj>
			</eq>
		</rule>
		<rule>
			<eq>
				<var>GitDiff</var>
				<conj>
					<var>Line</var>
					<var>File</var>
				</conj>
			</eq>
		</rule>
	</constraints>
</featureModel>
